//temp for prov a,b,c for a week and display it//
#include<iostream>
using namespace std;

int main()
{
	int tempa[7], tempb[7], tempc[7];
	int i;
	{
	cout << "Temperature for provinces A, B, and C\n";
        for(int i = 0; i < 7; ++i)
        {
            cout << "City A," << " Day " << i + 1 << " : ";
            cin >> tempa[i];
        }
    }
		{
	
        for(int i = 0; i < 7; ++i)
        {
            cout << "City B," << " Day " << i + 1 << " : ";
            cin >> tempb[i];
        }
    }
		{
	
        for(int i = 0; i < 7; ++i)
        {
            cout << "City C," << " Day " << i + 1 << " : ";
            cin >> tempc[i];
        }
    }	
	return 0;
}
