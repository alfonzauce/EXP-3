//Create a C++ program which prints the letters in a char array in reverse order
//shows the size of the array
#include<iostream>
#include<cstring>
using namespace std;

int main()
{
	char letters[100], x;
	int i,j;
	

	cout << "Enter the char array: ";
	cin >> letters;
	int size = strlen(letters);
	
	
	cout <<"The Reverse of the char array: ";
	for (i = 0; i < size; i++)
	
		for (j = i + 1; j < size; j++)
		{
			if (letters[i] > letters[j])             
			{
				x = letters[i];                
				letters[i] = letters[j];
				letters[j] = x;
			}
		}
	 

	for(i = 0; i < size; i++)
	cout << letters[i];
	cout << "\n";
		
	cout << "The length of the char array is: " << strlen(letters) + 1;


return 0;
}
