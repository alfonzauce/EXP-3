//Create a C++ program which prints the letters in a char array in reverse order
//shows the size of the array
#include<iostream>
#include<cstring>
using namespace std;

int main()
{
	char letters[100], rev[100], x;
	int i,j;
	

	cout << "Enter the char array: ";
	cin >> letters;
	int size = strlen(letters);
	
	
	cout <<"The Reverse of the char array: ";
	for (int i=0, j=size; i<=size; i++, j--)
	{
		rev[j] = letters[i];
	}
	
	
	for (i=0; i<= size; i++)
	{
		cout << rev[i];
	}
		 

	cout << "\nThe length of the char array is: " << strlen(letters) + 1;


return 0;
}

